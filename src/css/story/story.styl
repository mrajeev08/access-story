/* STICKY SCROLL */
#scrolly-side .scrolly
	display flex
	margin-top 2rem

	& > *
		flex 1

	article
		display flex
		flex-direction column
		align-items center
		justify-content center

		padding-right 25px
		padding-left 25px
		max-width 30rem
		@media (max-width:1000px)
			max-width 20rem
		@media (max-width:768px)
			max-width 25rem
			margin 0 auto


		.step
			align-self center
			min-height 100vh
			margin-bottom 1rem
			opacity 0.5
			@media (max-width:768px)
				min-height auto
				margin-bottom 90vh
			&:last-of-type
				margin-bottom 0
				@media (max-width:768px)
					min-height 100vh
			&.is-active
				opacity 1
			&.is-active p, &.is-active div
				background-color secondary
				@media (max-width:768px)
					background-color rgba(255,255,255,.95)
			p
				margin 0
				padding 1rem
				border-left 3px solid #a5a6b3
				//-webkit-font-smoothing auto
				&:first-of-type
					@media (max-width:768px)
						border-left none
						border-top 3px solid #a5a6b3
				&:not(:first-of-type)
					@media (max-width:768px)
						border-left none
						border-top none
			div
				margin 0
				padding-left 1rem
				padding-left 1rem
				padding-top 0
				padding-bottom 0
				border-left 3px solid #a5a6b3
				@media (max-width:768px)
					border-left none

	figure.sticky
		position sticky
		width 100%
		height 100vh
		margin 0
		top 0
		left 0
		transform translate3d(0,0,0)

@media only screen and (max-width: 768px)
	#scrolly-side .scrolly
		display inline

	#scrolly-side .scrolly figure.sticky
		width 100vw
		z-index -10

	.twinmap
		width 100%


/* MAP */
.mapcontainer
	position sticky
	top 0
	height 100vh

.graticule {
  fill: none;
  stroke: #cccccc;
  stroke-width: .5px;
}

.land {
	fill: #f1f1f1;
}

.average-line-two
	stroke-width 1px
	stroke #666


.region
	stroke #ffffff
	stroke-width 0.5px
	transition fill 1000ms ease-in-out
	cursor pointer

.country {
	stroke #444
	stroke-width 1px
}

.capital
	stroke #ffffff
	stroke-width 1px
	fill #333333
	fill-opacity 1
	pointer-events none

.other-capital
	fill #b7b7b7

.chorolegend text.label, .toplegend text.label, .label-outside
	font-size 12px
	font-weight 600

.toplegend text.label, #average-label
	fill black
	opacity 0.8
	/*filter url(#textshadow)*/
	text-shadow: -2px -2px white, -2px 2px white, 2px 2px white, 2px -2px white, -2px 0 white, 0 2px white, 2px 0 white, 0 -2px white
	font-weight 600
	@media (max-width: 450px)
		font-size 12px
		font-weight 500

#title
	font-size 24px
	text-anchor middle
	font-weight 500
	transform translate(0,-5px)
	fill black
	opacity 0.8
	/*filter url(#textshadow)*/
	text-shadow: -2px -2px white, -2px 2px white, 2px 2px white, 2px -2px white, -2px 0 white, 0 2px white, 2px 0 white, 0 -2px white
	font-weight 600
	@media (max-width:550px)
		font-size 18px
	@media (max-width:400px)
		font-size 16px
	@media (max-width:375px)
		font-size 15px

rect.swatch
